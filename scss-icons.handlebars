{
  // Default options
  'functions': false,
  'variableNameTransforms': ['dasherize']
}

{{#extend "scss"}}
{{#content "sprites"}}
{{#each sprites}}
${{strings.name}}: ({{px.x}}, {{px.y}}, {{px.offset_x}}, {{px.offset_y}}, {{px.width}}, {{px.height}}, {{px.total_width}}, {{px.total_height}}, '{{{escaped_image}}}', '{{name}}', );
.#{$gw2-css-prefix}-{{strings.name}} { @extend %gw2-characters; @include gw2-iconify({{px.x}}, {{px.y}}, {{px.width}}, {{px.height}}, $gw2-characters-file-width, $gw2-characters-file-height); }
{{/each}}
{{/content}}
{{#content "spritesheet"}}
$gw2-{{spritesheet_info.strings.name}}-file-height: 336;
$gw2-{{spritesheet_info.strings.name}}-file-width: 288;
$gw2-{{spritesheet_info.strings.name}}-file-name: '{{{spritesheet.escaped_image}}}';

%gw2-{{spritesheet_info.strings.name}} {
	background: url('#{$gw2-img-path}#{$gw2-{{spritesheet_info.strings.name}}-file-name}') no-repeat;
}

${{spritesheet_info.strings.name_sprites}}: ({{#each sprites}}${{strings.name}}, {{/each}});
${{spritesheet_info.strings.name}}: ({{spritesheet.px.width}}, {{spritesheet.px.height}}, '{{{spritesheet.escaped_image}}}', ${{spritesheet_info.strings.name_sprites}}, );
{{/content}}
{{/extend}}